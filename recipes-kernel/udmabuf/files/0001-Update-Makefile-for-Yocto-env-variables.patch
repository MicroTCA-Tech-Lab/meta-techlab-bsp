From: Jan Marjanovic <jan.marjanovic@desy.de>
Date: Mon, 13 Jul 2020 12:56:21 +0200
Subject: [PATCH] Update Makefile for Yocto (env variables)

---
 Makefile | 25 ++++++++-----------------
 1 file changed, 8 insertions(+), 17 deletions(-)

diff --git a/Makefile b/Makefile
index 6fcb180..7184db8 100644
--- a/Makefile
+++ b/Makefile
@@ -1,24 +1,15 @@
-HOST_ARCH       ?= $(shell uname -m | sed -e s/arm.*/arm/ -e s/aarch64.*/arm64/)
-ARCH            ?= $(shell uname -m | sed -e s/arm.*/arm/ -e s/aarch64.*/arm64/)
-KERNEL_SRC_DIR  ?= /lib/modules/$(shell uname -r)/build
-
-ifeq ($(ARCH), arm)
- ifneq ($(HOST_ARCH), arm)
-   CROSS_COMPILE  ?= arm-linux-gnueabihf-
- endif
-endif
-ifeq ($(ARCH), arm64)
- ifneq ($(HOST_ARCH), arm64)
-   CROSS_COMPILE  ?= aarch64-linux-gnu-
- endif
-endif
 
 u-dma-buf-obj           := u-dma-buf.o
 obj-$(CONFIG_U_DMA_BUF) += $(u-dma-buf-obj)
 
+SRC := $(shell pwd)
+
+
 all:
-	make -C $(KERNEL_SRC_DIR) ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE) M=$(PWD) obj-m=$(u-dma-buf-obj) modules
+	$(MAKE) -C $(KERNEL_SRC) M=$(SRC) modules
 
-clean:
-	make -C $(KERNEL_SRC_DIR) ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE) M=$(PWD) obj-m=$(u-dma-buf-obj) clean
+modules_install:
+	$(MAKE) -C $(KERNEL_SRC) M=$(SRC) modules_install
 
+clean:
+	$(MAKE) -C $(KERNEL_SRC) M=$(SRC) clean
